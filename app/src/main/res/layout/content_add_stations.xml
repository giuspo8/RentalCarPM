<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddStationsActivity"
    tools:showIn="@layout/app_bar_add_stations">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_station_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="AGGIUNGI STAZIONE"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="140dp" />

            <Button
                android:id="@+id/remove_station_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Rimuovi Stazione"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="200dp" />

            <EditText
                android:id="@+id/add_station_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome Stazione"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>