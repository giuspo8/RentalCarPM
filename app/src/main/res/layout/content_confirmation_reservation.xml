<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ConfirmationReservation"
    tools:showIn="@layout/app_bar_confirmation_reservation">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dettagli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dettagli del guidatore"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/campo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*campo obbligatorio"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"/>

        <EditText
            android:id="@+id/Nome"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:hint="Nome *"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true" />

        <EditText
            android:id="@+id/Cognome"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prenot"
            android:layout_alignStart="@+id/prenot"
            android:layout_alignLeft="@+id/prenot"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:hint="Cognome *" />

        <EditText
            android:id="@+id/email"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prenot"
            android:layout_alignStart="@+id/prenot"
            android:layout_alignLeft="@+id/prenot"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="200dp"
            android:ems="10"
            android:hint="Email *" />
        <EditText
            android:id="@+id/telefono"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prenot"
            android:layout_alignStart="@+id/prenot"
            android:layout_alignLeft="@+id/prenot"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="250dp"
            android:ems="10"
            android:hint="Telefono *" />
        <EditText
            android:id="@+id/numerocarta"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prenot"
            android:layout_alignStart="@+id/prenot"
            android:layout_alignLeft="@+id/prenot"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:ems="10"
            android:hint="numero carta di credito" />
        <EditText
            android:id="@+id/datascadenza"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prenot"
            android:layout_alignStart="@+id/prenot"
            android:layout_alignLeft="@+id/prenot"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="350dp"
            android:ems="10"
            android:hint="data di scadenza" />
        <EditText
            android:id="@+id/codicesicurezza"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prenot"
            android:layout_alignStart="@+id/prenot"
            android:layout_alignLeft="@+id/prenot"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="400dp"
            android:ems="10"
            android:hint="codice di sicurezza" />

        <Button
            android:id="@+id/confpre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:background="#03B424"
            android:text="conferma prenotazione"
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>