<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditReservation"
    tools:showIn="@layout/app_bar_recap_reservation">

    <TextView
        android:id="@+id/idpre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Prenotazione"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/stazione_ritiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stazione Ritiro"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/data_ritiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..............."
        android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/stazione_riconsegna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stazione Riconsegna"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/data_riconsegna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..............."
        android:layout_marginStart="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"/>
    <Button
        android:id="@+id/pagas"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:text="paga alla stazione"
        android:textSize="16sp"
        android:textStyle="normal|bold" />
    <Button
        android:id="@+id/pagao"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="350dp"
        android:text="paga ora"
        android:textSize="16sp"
        android:textStyle="normal|bold" />


    <ListView
        android:id="@+id/recap_car_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"/>


</RelativeLayout>