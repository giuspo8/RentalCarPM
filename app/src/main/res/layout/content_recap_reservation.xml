<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditReservation"
    tools:showIn="@layout/app_bar_recap_reservation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/idpre"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RIEPILOGO:"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:id="@+id/ritiro"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Ritiro:"
                    android:layout_marginTop="45dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                   />

                <TextView
                    android:id="@+id/riconsegna"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Riconsegna:"
                    android:layout_marginTop="70dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/stazione_ritiro"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Stazione ritiro"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="45dp"
                    android:layout_toRightOf="@id/ritiro"/>
                <TextView
                    android:id="@+id/data_ritiro"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Data ritiro"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/stazione_ritiro"/>

                <TextView
                    android:id="@+id/stazione_riconsegna"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Stazione Riconsegna: "
                    android:layout_toRightOf="@id/riconsegna"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="70dp"/>

                <TextView
                    android:id="@+id/data_riconsegna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data riconsegna"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="70dp"
                    android:layout_toRightOf="@id/stazione_riconsegna"/>

            </RelativeLayout>


            <Button
                android:id="@+id/pagas"
                android:layout_centerHorizontal="true"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:text="paga alla stazione    "
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="400dp"
                android:textSize="14sp" />
            <Button
                android:id="@+id/pagao"
                style="@android:style/Widget.Button"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="paga ora    "
                android:layout_marginBottom="70dp"
                android:layout_alignBottom="@id/pagas"
                android:textSize="14sp" />

            <ListView
                android:id="@+id/recap_car_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"/>


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>