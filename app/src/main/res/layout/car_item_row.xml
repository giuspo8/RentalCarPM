<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPathReservation.CarChoosing">
    <ImageView
        android:id="@+id/imageViewCar"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:scaleY="0.8"
        android:scaleX="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
    android:id="@+id/textViewCarName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:text="T1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCarShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T1"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="42dp"
        android:gravity="left"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewNumberPassengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T1"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="57dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent"
        />



    <TextView
        android:id="@+id/textViewCarPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T1"
        android:textColor="@color/black"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="72dp"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T1"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="27dp"
        android:gravity="left"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent"
   />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Tipo:"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="27dp"
/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N. Passeggeri:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="57dp"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="57dp"
        android:text="posti"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/textViewNumberPassengers"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costo:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="72dp"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambio:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="42dp"
        app:layout_constraintLeft_toLeftOf="@id/imageViewCar"
        app:layout_constraintTop_toTopOf="parent"
        />
</android.support.constraint.ConstraintLayout>