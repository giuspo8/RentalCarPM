<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainPathReservation.RegistrationActivity"
    tools:showIn="@layout/app_bar_registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/campo"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*campo obbligatorio"
        android:layout_alignTop="@id/telefonoUser"
        android:textSize="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/NomeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:hint="Nome *"
        android:inputType="text"
        android:digits="@string/SoloLettere"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/CognomeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/NomeUser"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:hint="Cognome *"
        android:inputType="text"
        android:digits="@string/SoloLettere"
        android:singleLine="true"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/emailUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/CognomeUser"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:hint="Email *"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="@color/black" />

        <EditText
            android:id="@+id/passwordUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/emailUser"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"
            android:ems="10"
            android:hint="Password *"
            android:inputType="textPassword"
            android:textColor="@color/black" />

    <EditText
        android:id="@+id/telefonoUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/passwordUser"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:hint="Telefono *"
        android:inputType="phone"
        android:textColor="@color/black" />

        <Button
            android:id="@+id/confUser"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:layout_alignTop="@id/campo"
            android:background="@color/colorPrimaryDark"
            android:text="conferma prenotazione"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>