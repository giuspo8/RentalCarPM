<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin.AddRemoveCarActivity"
    tools:showIn="@layout/app_bar_add_remove_car">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/add_car_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Aggiungi"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="260dp"/>

            <Button
                android:id="@+id/remove_car_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Rimuovi"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="320dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/add_model_car_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Modello"
                android:inputType="text"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/add_price_car_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Prezzo giornaliero"
                android:inputType="numberDecimal"
                android:layout_marginTop="40dp"
                android:textColor="@color/black"
                android:layout_marginRight="60dp"
                android:layout_alignTop="@id/add_passengers_car_et"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/add_class_car_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Classe auto"
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:layout_marginRight="60dp"
                android:layout_alignTop="@id/add_model_car_et"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/add_shift_car_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cambio"
                android:inputType="text"
                android:layout_marginTop="40dp"
                android:layout_marginRight="60dp"
                android:textColor="@color/black"
                android:layout_alignTop="@id/add_class_car_et"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/add_passengers_car_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Numero di passeggeri"
                android:inputType="number"
                android:layout_marginTop="40dp"
                android:layout_marginRight="60dp"
                android:textColor="@color/black"
                android:layout_alignTop="@id/add_shift_car_et"
                android:layout_marginLeft="20dp"/>


        </RelativeLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>