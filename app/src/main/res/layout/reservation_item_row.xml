<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/costo"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo:"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/TvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="115dp"
            android:text="Costo"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/costo"/>



        <TextView
            android:id="@+id/text_utente"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utente:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text_macchina"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macchina:"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text_ritiro"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stazione ritiro:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/text_ritiro2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data ritiro:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/text_ricon"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stazione riconsegna:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"/>

        <TextView
            android:id="@+id/text_ricon2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data riconsegna:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"/>

        <TextView
        android:id="@+id/RES_retirestationTextView"
            android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StazRit"
        android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/text_ritiro"
            android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/RES_restitutionStationTextView"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StazRic"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@id/text_ricon"/>

    <TextView
        android:id="@+id/DateHourRetireTextView"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OraRit"
        android:layout_toRightOf="@id/text_ritiro2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/DateHourRestitutionTextView"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OraRic"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/text_ricon2"/>

    <TextView
        android:id="@+id/RES_emailTextView"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/text_utente"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/RES_paymentTextView"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagamento"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"/>


    <TextView
        android:id="@+id/RES_car"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/text_macchina"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>