<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainPathReservation.StartActivity"
    tools:showIn="@layout/app_bar_start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/logininitbutton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Accedi"
                android:background="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/registerinitbutton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Registrati"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/logininitbutton"
                android:layout_marginTop="60dp"/>

            <Button
                android:id="@+id/admingobutton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Area Amministratore"
                android:textStyle="bold"
                android:background="@color/colorPrimaryDark"
                android:layout_alignTop="@id/registerinitbutton"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>